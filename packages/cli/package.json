{
  "name": "hook",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "hook": "./dist/index.js"
  },
  "files": [
    "dist",
    "dashboard"
  ],
  "scripts": {
    "build": "pnpm build:dashboard && tsc",
    "build:dashboard": "cd ../dashboard && pnpm build && cd ../cli && rm -rf dashboard && mkdir -p dashboard && cp -r ../dashboard/dist/* dashboard/",
    "clean": "rm -rf dist dashboard",
    "dev": "tsx src/index.ts dev",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "@hook/core": "workspace:*",
    "@hono/node-server": "^1.8.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
